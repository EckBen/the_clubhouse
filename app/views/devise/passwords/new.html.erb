<div class="column is-one-third is-narrow">
  <div class="box">
    <h2></h2>
    <h1 class="title">Forgot your password?</h1>
    <h2 class="subtitle">Let's get you a new one...</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions columns is-centered field">
        <div class="column is-half control">
          <%= button_tag type: 'submit', class: "button is-dark is-small is-fullwidth" do %>
            <i class='icon'><%= fa_icon('envelope') %></i>
            <span>Send me reset password instructions</span>
          <% end %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>